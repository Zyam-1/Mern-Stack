extend ../layout

block content 
    .row
        .col-sm-8 
            h1=title
        .col-sm-8
            a(href="/products/add", class = "btn btn-success float-right") Add New Product
    
    
    table.table
        thead 
            tr 
                th Name 
                th Price
                th Actions
        tbody
            each product in productList
                tr
                    td=product.name 
                    td="Rs "+product.price
                    td
                        a(href="/products/delete/"+product._id class = "btn btn-danger") Delete
                        a(href="/products/edit/"+product._id class = "btn btn-info") Edit 
                        a(href="/products/cart/"+product._id class = "btn btn-secondary") Add to Cart 



