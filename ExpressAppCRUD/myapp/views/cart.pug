extends layout

block content 
    h1 Shopping Cart
    - var total=0;
        table.table 
            thead 
                tr 
                    th Name 
                    th Price 
                    th Actions
            tbody 
                each item in cart
                    -total +=item.price

                        tr 
                            td=item.name 
                            td=item.price 
                            td
                                a(href="/ShoppingCart/delete/"+item._id class = "btn btn-danger") Remov Fromm Cart
            tfooter 
                    tr 
                        td Total 
                        td=total
            